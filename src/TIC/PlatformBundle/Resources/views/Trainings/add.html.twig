{% extends "TICPlatformBundle::layout.html.twig" %}

{% block title %}
    {{ 'trainings'|trans }} - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("assets/clip-one/plugins/select2/select2.css") }}">
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">{{ 'training.new' |trans }}</h1>
        </div>
    </div>

    {% include "TICPlatformBundle:Trainings:form.html.twig" %}
    <p>
        <a href="{{ path('tic_platform_trainings')}}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            {{ 'cancel' |trans }}
        </a>
    </p>

{% endblock %}

{% block js %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset("assets/clip-one/plugins/select2/select2.min.js") }}"></script>
    <script type="application/javascript" src="{{ asset('js/main.js') }}"></script>
{% endblock %}